<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.CSHICS" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Custom Action Bar Style -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Set the height of the action bar (e.g., 32dp is about half of the default) -->
        <item name="height">32dp</item>
        <!-- Define a custom text appearance for the title -->
        <item name="titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <!-- Custom Title Text Style -->
    <style name="MyActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- Set the text size (e.g., 16sp is smaller than default) -->
        <item name="android:textSize">16sp</item>
    </style>
</resources>